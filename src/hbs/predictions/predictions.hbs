{{> month_select }}
<div class="table">
  <table>
    <thead>
      <tr>
        <th>Datum</th>
        <th>Wedstrijd</th>
        <th>Uitslag</th>
        <th>
          <span class="l-b">Speler</span>
          <span class="s-b">Score</span>
        </th>
        <th class="l-tc">Voorspelling</th>
        <th class="l-tc">Score</th>
      </tr>
    </thead>
    <tbody>
      {{#each predictions}}
        {{! LARGE}}
        <tr class="prediction l-tr" data-id="{{_id}}">
          {{#with game}}
            {{#if first}}
              <td>
                <span class="right">{{formatDate matchDay format='ddd DD MMM YYYY HH:mm'}}</span>
              </td>
              <td>
                {{#with homeTeam}}
                  <img class="small" alt="{{name}}" src="images/logos/{{logoFilename}}" /> <span class="l-i">{{name}}</span>
                {{/with}}
                -
                {{#with awayTeam}}
                  <img class="small" alt="{{name}}" src="images/logos/{{logoFilename}}" /> <span class="l-i">{{name}}</span>
                {{/with}}
              </td>
              <td>{{homeTeamGoals}} - {{awayTeamGoals}}</td>
            {{else}}
              <td colspan="3"></td>
            {{/if}}
          {{/with}}
          <td>{{poolplayer.name}}</td>
          <td>{{homeTeamGoals}} - {{awayTeamGoals}}</td>
          <td>{{score}}</td>
        </tr>
        {{! SMALL}}
        {{#with game}}
          {{#if first}}
            <tr class="game s-tr">
              <td>
                <span class="right">{{formatDate matchDay format='DD-MM HH:mm'}}</span>
              </td>
              <td>
                {{#with homeTeam}}
                  <img class="small" alt="{{name}}" src="images/logos/{{logoFilename}}" /> <span class="l-i">{{name}}</span>
                {{/with}}
                -
                {{#with awayTeam}}
                  <img class="small" alt="{{name}}" src="images/logos/{{logoFilename}}" /> <span class="l-i">{{name}}</span>
                {{/with}}
              </td>
              <td>{{homeTeamGoals}} - {{awayTeamGoals}}</td>
            </tr>
          {{/if}}
        {{/with}}
        <tr class="prediction s-tr" data-id="{{_id}}">
          <td>&nbsp;</td>
          <td>{{poolplayer.name}}</td>
          <td>{{homeTeamGoals}} - {{awayTeamGoals}}</td>
          <td>{{score}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
<div>
  <button type="button" class="js_button_add">Toevoegen</button>
  <button type="button" class="js_button_update" disabled>Wijzigen</button>
  <button type="button" class="js_button_delete" disabled>Verwijderen</button>
</div>
